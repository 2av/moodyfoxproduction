        Launch demo modal
    </button>*@

<div class="modal fade" id="contectform" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <span class="close" data-dismiss="modal" aria-label="Close">
                    <img src="~/Assets/img/close-icon.png">
                </span>
                <img src="~/Assets/img/ThankYou-Mail.png">
                <h5>THANK YOU</h5>
                <p>
                    Your submission has been received. We will <br>
                    be in touch and contact you soon.
                </p>
                <button type="button" class="btn btn-primary">SUBMIT</button>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="warning-message" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center">
                <h5 class="text-danger">Validation Error</h5>
                <p id="validation-errors"></p> <!-- Placeholder for error messages -->
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Assets/js/form-validation.js"></script>